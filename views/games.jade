doctype html
html(lang='en')
    head
        meta(charset='utf-8')
        title #{title}
        link(rel='stylesheet', href='/css/bootstrap.css')
        link(rel='stylesheet', href='/css/style.css')
        script(src='/js/jquery-2.1.3.min.js')
        script(src='/js/bootstrap.min.js')
        script(src='/js/underscore-min.js')
        script(src='/js/script.js')
        script(src="/socket.io/socket.io.js")
        script(src='/js/angular.min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-route.js')
        script(src='/js/controller.js')
    body(ng-app='my-app')
        #header.container-fluid
            .row
                .col-md-4
                    .h1
                        b: a.logo(href='/') AppChestraGames
                .col-md-6.pull-right.text-right
                    .place_login
                        | Hello,
                        a(href='') #{user.login}
        .container(ng-controller='myController')
            .row
                .col-md-9
                    h3
                        b.red #{game.player1.login}
                        span &nbsp;vs&nbsp;
                        b.red #{game.player2.login}
                    .row.text-center.desk
                        #1.col-md-4.deskpole
                        #2.col-md-4.deskpole
                        #3.col-md-4.deskpole
                        #4.col-md-4.deskpole
                        #5.col-md-4.deskpole
                        #6.col-md-4.deskpole
                        #7.col-md-4.deskpole
                        #8.col-md-4.deskpole
                        #9.col-md-4.deskpole
                .col-md-3.pull-right
                    h4
                        b Game chat
                    .row
                        .col-md-12
                            .chat
                                ul#style-2.list-unstyled.messages-box
                                    if (game.chat.length == 0)
                                        - each message in game.chat
                                            li
                                                span.users #{message.user.login}
                                                    | :&nbsp;
                                                span #{message.text}
                                    else
                                        li No messages
                                input#user_message.form-control(
                                    type='text'
                                    name='userMsg'
                                    )
                                br
                                button#send_msg.btn.btn-primary(type='button') Send message
        #win_modal.modal.fade
            .modal-dialog
                .modal-content
                    .modal-header
                        button.close(
                            type='button'
                            data-dismiss='modal'
                            aria-label='Close'
                            )
                                span(aria-hidden='true') &times;
                        h4.modal-title Game over
                    .modal-body
                        h3._winner
                    .modal-footer
                        button.btn.btn-default(
                            type='button'
                            data-dismiss='modal'
                            ) Close
